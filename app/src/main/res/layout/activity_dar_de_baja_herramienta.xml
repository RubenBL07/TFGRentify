<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde_claro"
    tools:context=".activities.DarDeBajaHerramientaActivity">

    <ImageButton
        android:id="@+id/imageButtonBackBaja"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="#00FFFFFF"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:src="@mipmap/back_foreground"
        android:tint="@color/gris"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.046"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="254dp"
        android:layout_height="78dp"
        android:fontFamily="@font/golos_text_bold"
        android:text="ADMINISTRAR HERRAMIENTAS"
        android:textAlignment="center"
        android:textColor="@color/verde_oscuro"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.061" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/golos_text_semibold"
                android:text="DAR DE BAJA"
                android:textAlignment="center"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.055" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/golos_text_semibold"
                android:text="DAR DE ALTA"
                android:textAlignment="center"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="360dp"
                android:layout_height="2dp"
                android:background="@color/gris"
                android:fontFamily="@font/golos_text_semibold"
                android:textAlignment="center"
                android:textColor="@color/grisOscuro"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDarDeBaja"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginBottom="500dp"
                android:fontFamily="@font/golos_text_semibold"
                android:text="Dar de Baja"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/rojo"
                app:cornerRadius="30dp"
                app:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView19"
                app:layout_constraintVertical_bias="0.454" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDarDeAlta"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginBottom="248dp"
                android:fontFamily="@font/golos_text_semibold"
                android:text="Dar de Alta"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/verde_claro"
                app:cornerRadius="30dp"
                app:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView19"
                app:layout_constraintVertical_bias="0.454" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.143">

                <Spinner
                    android:id="@+id/spinnerBaja"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:spinnerMode="dialog" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="30dp"
                app:cardElevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.517">

                <Spinner
                    android:id="@+id/spinnerAlta"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:spinnerMode="dialog" />
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>